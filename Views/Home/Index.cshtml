@{
    ViewData["Title"] = "Home Page";
}

@model BooksListViewModel

    <h1>Welcome to the bookstore</h1>

@foreach (Book b in Model.Books)
{
    <div class="card m-1 p-1">
		<h4>@b.Title</h4>
		<ul>
			<li>Author: @b.Author</li>
			<li>Publisher: @b.Publisher</li>
			<li>ISBN: @b.Isbn</li>
			<li>Category: @b.Category</li>
			<li>Number of Pages: @b.PageCount</li>
			<li>Price: $@b.Price</li>

		</ul>
	</div>
     
}

<div page-model="@Model.PaginationInfo" page-action="Index" page-class-enabled="true" page-class-normal="btn-outline-dark" 
	page-class="btn" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>



